+	ptrack_map = (PtrackMap) mmap(NULL, ptrack_map_size,
+										 PROT_READ | PROT_WRITE, MAP_SHARED,
+										 ptrack_fd, 0);
+	if (ptrack_map == MAP_FAILED)
+			elog(ERROR, "Failed to mmap ptrack file: %m");
+#endif
+}
