+#ifdef WIN32
+	{
+		HANDLE mh = CreateFileMapping((HANDLE) _get_osfhandle(ptrack_fd),
+									  NULL,
+									  PAGE_READWRITE,
+									  0,
+									  (DWORD) ptrack_map_size,
